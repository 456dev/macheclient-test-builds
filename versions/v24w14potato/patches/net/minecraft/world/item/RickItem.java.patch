+package net.minecraft.world.item;
+
+import java.util.List;
+import java.util.Random;
+import net.minecraft.ChatFormatting;
+import net.minecraft.core.BlockPos;
+import net.minecraft.core.component.DataComponents;
+import net.minecraft.network.chat.Component;
+import net.minecraft.network.chat.MutableComponent;
+import net.minecraft.world.Container;
+import net.minecraft.world.entity.EntityType;
+import net.minecraft.world.entity.LightningBolt;
+import net.minecraft.world.entity.item.ItemEntity;
+import net.minecraft.world.level.Level;
+import org.jetbrains.annotations.Nullable;
+
+public class RickItem extends Item {
+
+  public RickItem(Properties properties) {
+    super(properties);
+  }
+
+  @Override
+  public void onDestroyed(ItemEntity itemEntity) {
+    // summon thunderbolt
+    LightningBolt lightningBolt = EntityType.LIGHTNING_BOLT.create(itemEntity.level());
+    if (lightningBolt != null) {
+      lightningBolt.moveTo(itemEntity.getX(), itemEntity.getY(), itemEntity.getZ());
+      lightningBolt.setVisualOnly(true);
+      itemEntity.level().addFreshEntity(lightningBolt);
+    }
+
+    super.onDestroyed(itemEntity);
+  }
+
+  @Override
+  public void onViewedInContainer(ItemStack itemStack, Level level, BlockPos blockPos,
+      Container container) {
+
+    int rollFactor = itemStack.getOrDefault(DataComponents.ROLL_FACTOR, 0);
+    if (rollFactor > 0) {
+      Component customName = Component.translatableWithFallback("roll_factor." + rollFactor, "%s",
+          Component.translatable("item.minecraft.rick.end"));
+      itemStack.set(DataComponents.CUSTOM_NAME, customName);
+    }
+
+    rollFactor++;
+    itemStack.set(DataComponents.ROLL_FACTOR, rollFactor);
+
+    super.onViewedInContainer(itemStack, level, blockPos, container);
+  }
+
+  @Override
+  public void appendHoverText(ItemStack stack, @Nullable Level level,
+      List<Component> tooltipComponents, TooltipFlag isAdvanced) {
+    
+    int rollFactor = stack.getOrDefault(DataComponents.ROLL_FACTOR, 0);
+    
+    if (isAdvanced.isAdvanced()) {
+      MutableComponent rollFactorComponent = Component.translatable("item.minecraft.rick.roll_factor", rollFactor);
+      tooltipComponents.add(rollFactorComponent);
+    }
+    
+    Component dancer = Component.literal("\uD83D\uDD7A").withStyle(ChatFormatting.GOLD);
+    MutableComponent line = Component.empty();
+    
+    // add a dancer for each rollfactor, split into lines of 10
+    for (int i = 0; i < rollFactor; i++) {
+      if (i % 10 == 0 && i != 0) {
+        tooltipComponents.add(line);
+        line = Component.empty();
+      }
+      line.append(dancer);
+    }
+    // add the last line
+    tooltipComponents.add(line);
+    
+    
+    
+    super.appendHoverText(stack, level, tooltipComponents, isAdvanced);
+  }
+}
